<NeuWidget>:
    md_bg_color: "#cccccc"
    radius: 20
    canvas.before:
        Color:
            rgba: 1, 1, 1, .6
        BoxShadow:
            pos: self.pos
            size: self.size
            offset: -10, 10
            spread_radius: 0, 0
            border_radius: 20, 20, 20, 20
            blur_radius: 80
        Color:
            rgba: 0, 0, 0, .6
        BoxShadow:
            pos: self.pos
            size: self.size
            offset: 10, -10
            spread_radius: -30, -30
            border_radius: 20, 20, 20, 20
            blur_radius: 60